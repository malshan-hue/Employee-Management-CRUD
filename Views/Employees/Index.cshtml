@model List<ASPNET_Employee_CRUD.Models.Domain.Employee>
@{
}

<h1>Employees</h1>

<table class="table">

	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Salary</th>
			<th>Data of Birth</th>
			<th>Departmert</th>
			<th>View</th>
		</tr>
	</thead>

	<tbody>
		@foreach(var employee in Model)
		{
			<tr>
				<td>@employee.Id</td>
				<td>@employee.Name</td>
				<td>@employee.Email</td>
				<td>@employee.salary</td>
				<td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
				<td>@employee.Department</td>
				<td><a class="btn btn-primary" href="Employees/View/@employee.Id">View</a></td>
			</tr>
		}
	</tbody>
</table>